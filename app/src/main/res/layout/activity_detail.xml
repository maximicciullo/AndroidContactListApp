<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.maximilianomicciullo.androidcontactlistapp.DetailActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Contact List"
        android:id="@+id/btnBack"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contactImg"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxHeight="90dp"
        android:maxWidth="90dp"
        android:adjustViewBounds="true"
        android:src="@drawable/person"
        android:longClickable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Title Name"
        android:id="@+id/txtTitleName"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnBack"
        android:layout_alignStart="@+id/btnBack"
        android:layout_marginLeft="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Name"
        android:id="@+id/txtName"
        android:layout_below="@+id/txtTitleName"
        android:layout_alignLeft="@+id/txtTitleName"
        android:layout_alignStart="@+id/txtTitleName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Title Company"
        android:id="@+id/txtTitleCompany"
        android:layout_below="@+id/txtName"
        android:layout_alignLeft="@+id/txtName"
        android:layout_alignStart="@+id/txtName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Company"
        android:id="@+id/txtCompany"
        android:layout_below="@+id/txtTitleCompany"
        android:layout_alignLeft="@+id/txtTitleCompany"
        android:layout_alignStart="@+id/txtTitleCompany" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title Phone"
        android:id="@+id/txtTitlePhone"
        android:layout_below="@+id/txtCompany"
        android:layout_alignRight="@+id/txtName"
        android:layout_alignEnd="@+id/txtName"
        android:layout_marginTop="31dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Phone"
        android:id="@+id/txtPhone"
        android:layout_alignLeft="@+id/txtTitlePhone"
        android:layout_alignStart="@+id/txtTitlePhone"
        android:layout_below="@+id/txtTitlePhone"
        android:layout_alignRight="@+id/btnBack"
        android:layout_alignEnd="@+id/btnBack" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title Address"
        android:id="@+id/txtTitleAddress"
        android:layout_below="@+id/txtPhone"
        android:layout_alignRight="@+id/txtCompany"
        android:layout_alignEnd="@+id/txtCompany" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Address"
        android:id="@+id/txtAddress"
        android:singleLine="false"
        android:layout_below="@+id/txtTitleAddress"
        android:layout_alignLeft="@+id/txtTitleAddress"
        android:layout_alignStart="@+id/txtTitleAddress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title Birthday"
        android:id="@+id/txtTitleBirthday"
        android:layout_below="@+id/txtAddress"
        android:layout_alignLeft="@+id/txtPhone"
        android:layout_alignStart="@+id/txtPhone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Birthday"
        android:id="@+id/txtBirthday"
        android:layout_below="@+id/txtTitleBirthday"
        android:layout_alignLeft="@+id/txtTitleBirthday"
        android:layout_alignStart="@+id/txtTitleBirthday" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Email"
        android:id="@+id/txtEmail"
        android:layout_below="@+id/txtTitleEmail"
        android:layout_alignLeft="@+id/txtAddress"
        android:layout_alignStart="@+id/txtAddress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Title Email"
        android:id="@+id/txtTitleEmail"
        android:layout_below="@+id/txtBirthday"
        android:layout_alignLeft="@+id/txtBirthday"
        android:layout_alignStart="@+id/txtBirthday"
        android:linksClickable="false"
        android:longClickable="false" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/starImage"
        android:layout_above="@+id/txtTitleCompany"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:adjustViewBounds="true"
        android:src="@drawable/star" />

</RelativeLayout>
